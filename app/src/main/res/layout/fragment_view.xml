<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollViewAdvertisement"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutAdvertisement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:useDefaultMargins="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutImageAdvertisement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0"
            app:layout_rowSpan="1">

            <ImageView
                android:id="@+id/imageViewAdvertisement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleLabelTextView"
            style="@style/AdvertisementLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_title"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/AdvertisementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_rowSpan="1" />

        <TextView
            android:id="@+id/descriptionLabelTextView"
            style="@style/AdvertisementLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_description"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="2"
            app:layout_rowSpan="1" />

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/AdvertisementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2" />

        <TextView
            android:id="@+id/urlLabelTextView"
            style="@style/AdvertisementLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_URL"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="3"
            app:layout_rowSpan="1" />

        <TextView
            android:id="@+id/urlTextView"
            style="@style/AdvertisementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <TextView
            android:id="@+id/contactsLabelTextView"
            style="@style/AdvertisementLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_contact"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="4"
            app:layout_rowSpan="1" />

        <TextView
            android:id="@+id/contactsTextView"
            style="@style/AdvertisementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.core.widget.NestedScrollView>