<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/category_margin">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleCategoryTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/primaryText"
        app:boxStrokeColor="@color/darkPrimaryColor"
        app:counterTextColor="@color/darkPrimaryColor"
        app:endIconTint="@color/darkPrimaryColor"
        app:helperTextTextColor="@color/darkPrimaryColor"
        app:hintTextColor="@color/darkPrimaryColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleCategoryTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_category_title"
            android:imeOptions="actionNext"
            android:inputType="text|textAutoCorrect" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionCategoryTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/primaryText"
        app:boxStrokeColor="@color/darkPrimaryColor"
        app:counterTextColor="@color/darkPrimaryColor"
        app:endIconTint="@color/darkPrimaryColor"
        app:helperTextTextColor="@color/darkPrimaryColor"
        app:hintTextColor="@color/darkPrimaryColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionCategoryTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_category_description"
            android:imeOptions="actionNext"
            android:inputType="text|textAutoCorrect" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>